 */
function phenix_custom_block_node_access(NodeInterface $node, $op, AccountInterface $account) {
  $domain = \Drupal::request()->getHost();
  // Get the requested URL path.
  $currentUrl = \Drupal::request()->getRequestUri();

  if (($currentUrl == '/') &&  $domain == 'metiers-viande.dev.makoa.net') {
    $response = new \Symfony\Component\HttpFoundation\RedirectResponse('https://metiers-viande.dev.makoa.net/accueil-metier');
    $response->send();
  } 
  if (($currentUrl == '/') &&  $domain == 'metiers-viande.makoa4.makoa.net') {
    $response = new \Symfony\Component\HttpFoundation\RedirectResponse('https://metiers-viande.makoa4.makoa.net/accueil-metier');
    $response->send();
  } 

  if ($account->isAnonymous()) {
    if ((strpos($domain, 'test-culture') !== false) || (strpos($domain, 'phenix.cultureviande') !== false)) {
      return \Drupal\Core\Access\AccessResult::forbidden();
    }
    
    if (in_array($node->id(), [41250, 41248, 41249])) {//TODO mettre le bon id pour MEP
      if (in_array($op, ['view'])) {
          return \Drupal\Core\Access\AccessResult::allowed();
      }
      if (in_array($op, ['delete', 'update', 'view all revisions'])) {
        return \Drupal\Core\Access\AccessResult::forbidden();
      }
      return \Drupal\Core\Access\AccessResult::allowed();
    }else {
        // dump($node->id(), $node);
        // return \Drupal\Core\Access\AccessResult::forbidden();
        $response = new \Symfony\Component\HttpFoundation\RedirectResponse('/accueil-metier');
        $response->send();
    }
  }
}

