/**
 * Implements hook_preprocess_HOOK() for media entities.
 */
function phenix_custom_block_preprocess_media(array &$variables) {
  $custom_service = \Drupal::service('phenix_custom_block.view_services');
  // Check if the media type is "document" (you can replace 'document' with the actual media type machine name).
  if ($variables['media']->bundle() == 'document') {//TODO MORE CONDITION
    // Load the file entity associated with the media.
    $file = $variables['media']->get('field_media_document')->entity;
    if ($file instanceof \Drupal\file\FileInterface) {
      // Replace the default thumbnail image with your custom image.

      $mediaObject = $variables['content']['thumbnail']['#object'];
      $mediaObjectId = $custom_service->getNodeFieldValue($mediaObject, 'field_media_document');
      $fileObj = File::load($mediaObjectId);
      $fileMeme = $custom_service->getNodeFieldValue($fileObj, 'filemime');
      $thumbnailIcon = $custom_service->getFileTypeExtension($fileMeme);
      
      // Load the file entity for the new thumbnail image.
      $new_thumbnail_image_path = '/files/assets/' . $thumbnailIcon; // Replace with the path to your new thumbnail image.
      $new_thumbnail_image = File::create([
        'uri' => $new_thumbnail_image_path,
      ]);
      $new_thumbnail_image->save();

      // Update the media entity's "thumbnail" field to reference the new image.
      $variables['content']['thumbnail']['#object']->set('thumbnail', $new_thumbnail_image);
      $variables['content']['thumbnail']['#object']->save();
    }
  }
}




